import java.util.Scanner;

public class ImprovedGradeConversion {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		Scanner firstScanner = new Scanner(System.in);
		System.out.println("Enter numerical grade: ");
		double userGrade = firstScanner.nextDouble();
		
		DisplayLetterGrade(userGrade);
	}
	
	public static String DisplayLetterGrade(double userGrade) {
		if (userGrade >= 90 && userGrade <= 100) {
			System.out.println("You got an A! Perfect!");
		}
		else if (userGrade >= 80 && userGrade < 90) {
			System.out.println("You got an B! Awesome!");
		}
		else if (userGrade >= 70 && userGrade < 80) {
			System.out.println("You got an C! Great!");
		}
		else if (userGrade >= 60 && userGrade < 70) {
			System.out.println("You got an D! Not Bad!");
		}
		else if (userGrade >= 0 && userGrade < 60) {
			System.out.println("You got an F! Uh oh!");
		}
		else {
			System.out.println("Please enter a valid grade.");
		}
		return null;
	}

}
