package com.pointwest.java.manager;

public class CalculatorInputException extends Exception {
	
	public static final String MESSAGE = "Invalid Calculator Input";
	public static final String CANNOT_DIVIDE_BY_ZERO_MESSAGE = "Cannot Divide by Zero";
	public String displayMessage;
	
	public CalculatorInputException(String message) {
		this.displayMessage = message;
	}
	
	public String getDisplayMessage() {
		return displayMessage;
	}

	public String getMessage() {
		return MESSAGE;
	}
	
	public String getCannotDivideByZeroMessage() {
		return CANNOT_DIVIDE_BY_ZERO_MESSAGE;
	}
}
